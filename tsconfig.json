{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2020",
    "module": "commonJS",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src/*.ts",
    "test/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
