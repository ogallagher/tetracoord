{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declaration": true,
    // "declarationDir": "types", separating declarations from js files currently makes them unusable... how to fix?
    "declarationMap": false,
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "checkJs": false,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": []
  },
  "exclude": [
    "node_modules"
  ]
}